{
  "plugins": ["@typescript-eslint", "jest"],
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:jest/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "enumMember",
        "format": ["UPPER_CASE"]
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true
  },
  "ignorePatterns": ["/dist", "/node_modules", "jest.config.js"]
}
