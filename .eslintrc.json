{
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "enumMember",
        "format": ["UPPER_CASE"]
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true
  },
  "ignorePatterns": ["/dist", "/node_modules"]
}
